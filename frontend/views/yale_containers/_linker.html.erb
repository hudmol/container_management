<%
  if form.obj['ref'].blank?
    selected_json = "{}"
  else
    selected_json = form.obj['_resolved'].to_json
  end

  exclude_ids = [] if exclude_ids.blank?

  allow_create = true if allow_create.nil?

  required = true if required.nil?

  linkable_types = ["yale_container"]
  label = I18n.t("yale_container._singular") if label.nil?
%>
<div class="control-group <% if required %>required<% end %>">
  <label class="control-label"><%= label %></label>
  <div class="controls">
    <div class="input-append linker-wrapper">
      <input type="text" class="linker"
             id="<%= form.id_for("ref") %>"
             data-label="<%= I18n.t("yale_container._singular") %>"
             data-label_plural="<%= I18n.t("yale_container._plural") %>"
             data-name="ref"
             data-path="<%= form.path %>"
             data-url="<%= url_for :controller => :search, :action => :do_search, :format => :json, :filter_term => {:level => "1"}.to_json %>"
             data-browse-url="<%= url_for :controller => :search, :action => :do_search, :format => :js, :facets => [], :filter_term => {:level => "1"}.to_json, :sort => "title_sort asc" %>"
             data-selected="<%= selected_json %>"
             data-multiplicity="one"
             data-types='<%= linkable_types.to_json %>'
             data-exclude='<%= exclude_ids.to_json %>'
      />
      <div class="btn-group pull-right">
        <a class="btn dropdown-toggle last" data-toggle="dropdown" href="javascript:void(0);"><span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="javascript:void(0);" class="linker-browse-btn"><%= I18n.t("actions.browse") %></a></li>
          <% if allow_create && user_can?('manage_yale_container') %>
            <li>
              <a data-target="<%= url_for :controller => :yale_containers, :action => :new, :inline => true %>" class="linker-create-btn"><%= I18n.t("actions.create") %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
