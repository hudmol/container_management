<%= setup_context(:title => I18n.t("yale_container._plural")) %>

<%
   @show_multiselect_column = user_can?("manage_yale_container")
%>

<div class="row-fluid">
  <div class="span3">
    <%= render_aspace_partial :partial => "search/filter" %>
  </div>
  <div class="span9">
    <% if user_can?("manage_yale_container") %>
      <div class="row-fluid">
        <div class="span12">
          <div class="record-toolbar">
            <div class="pull-right">
              <%= link_to I18n.t("yale_container._frontend.action.create"), {:controller => :yale_containers, :action => :new}, :class => "btn btn-small" %>
              <%= button_delete_multiple_action(:yale_containers) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="record-pane">
      <%= link_to_help :topic => "search" %>

      <h2><%= I18n.t("yale_container._plural") %></h2>

      <%= render_aspace_partial :partial => "shared/flash_messages" %>

      <%= render_aspace_partial :partial => "search/listing" %>
    </div>
  </div>
</div>
