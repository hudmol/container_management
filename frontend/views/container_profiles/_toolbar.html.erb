<% if user_can?('manage_container_profile_record') %>
  <div class="row-fluid">
    <div class="span12">
      <div class="record-toolbar">
        <% if !['edit', 'update', 'new'].include?(controller.action_name) %>
        <div class="btn-group pull-left">
          <%= link_to I18n.t("actions.edit"), {:controller => :container_profiles, :action => :edit, :id => @container_profile.id}, :class => "btn btn-small btn-primary" %>
        </div>
        <% end %>
        <% if !['new'].include?(controller.action_name) %>
        <div class="btn-toolbar pull-right">
          <div class="btn-group">
            <div class="btn btn-inline-form">
              <%= button_delete_action url_for(:controller => :container_profiles, :action => :delete, :id => @container_profile.id) unless @container_profile.id.nil? %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
